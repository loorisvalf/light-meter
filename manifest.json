{
  "version": "0.1.0",
  "manifest_version": 3,
  "offline_enabled": true,
  "name": "Light Meter (RGB & Luminance)",
  "homepage_url": "https://mybrowseraddon.com/light-meter.html",
  "description": "Measure the surrounding light (RGB) and luminance with your computer's camera!",
  "permissions": [
    "storage", 
    "contextMenus"
  ],
  "commands": {
    "_execute_action": {}
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Light Meter (RGB & Luminance)",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
